<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../css/BaoCaoStyles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ql_khachsan.controllers.BaoCaoController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="filter-bar">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <children>
                <Label text="Kiểu báo cáo:" />
                <ComboBox fx:id="cbKieuBaoCao" prefWidth="150" />
                <Label text="Tháng:" />
                <ComboBox fx:id="cbThang" prefWidth="100" />
                <Label text="Quý:" />
                <ComboBox fx:id="cbQuy" prefWidth="100" />
                <Label text="Năm:" />
                <ComboBox fx:id="cbNam" prefWidth="100" />
                <Button fx:id="btnXem" styleClass="btn-view" text="Xem báo cáo" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets bottom="15" left="15" right="15" top="0" />
            </padding>

            <HBox spacing="15">
                <children>
                    <VBox styleClass="card, card-blue" HBox.hgrow="ALWAYS">
                        <children>
                            <Label styleClass="card-title" text="TỔNG DOANH THU" />
                            <Label fx:id="txtTongDoanhThu" styleClass="card-value" text="0 VNĐ" />
                        </children>
                    </VBox>
                    <VBox styleClass="card, card-green" HBox.hgrow="ALWAYS">
                        <children>
                            <Label styleClass="card-title" text="LƯỢT ĐẶT PHÒNG" />
                            <Label fx:id="txtLuotDat" styleClass="card-value" text="0" />
                        </children>
                    </VBox>
                    <VBox styleClass="card, card-orange" HBox.hgrow="ALWAYS">
                        <children>
                            <Label styleClass="card-title" text="TỶ LỆ LẤP ĐẦY" />
                            <Label fx:id="txtTyLeLap" styleClass="card-value" text="0%" />
                        </children>
                    </VBox>
                    <VBox styleClass="card, card-purple" HBox.hgrow="ALWAYS">
                        <children>
                            <Label styleClass="card-title" text="PHÒNG HOT NHẤT" />
                            <Label fx:id="txtLoaiPhongTop" styleClass="card-value" text="---" />
                        </children>
                    </VBox>
                </children>
            </HBox>

            <HBox spacing="15" VBox.vgrow="ALWAYS">
                <LineChart fx:id="chartDoanhThu" title="Biểu đồ biến động doanh thu" HBox.hgrow="ALWAYS">
                    <xAxis>
                        <CategoryAxis label="Thời gian" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Doanh thu (VNĐ)" />
                    </yAxis>
                </LineChart>

                <TableView fx:id="tableChiTiet" prefWidth="450">
                    <columns>
                        <TableColumn fx:id="colThoiGian" prefWidth="100" text="Thời gian" />
                        <TableColumn fx:id="colLuotDat" prefWidth="80" text="Lượt đặt" />
                        <TableColumn fx:id="colDoanhThuPhong" prefWidth="120" text="DT Phòng" />
                        <TableColumn fx:id="colTong" prefWidth="130" text="Tổng cộng" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </HBox>
        </VBox>
    </center>
</BorderPane>