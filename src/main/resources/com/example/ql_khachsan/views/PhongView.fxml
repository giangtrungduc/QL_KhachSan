<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="735.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ql_khachsan.controllers.PhongController">
    <left>
        <VBox prefHeight="540.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: #ecf0f1;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Thông tin phòng">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Tên phòng:" />
                        <TextField fx:id="txtTenPhong" promptText="Ví dụ: 101" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Loại phòng:" />
                        <ComboBox fx:id="cbLoaiPhong" prefWidth="280.0" promptText="-- Chọn loại phòng --" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Số người tối đa:" />
                        <TextField fx:id="txtSoNguoi" editable="false" promptText="Ví dụ: P101" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Giá phòng (VNĐ):" />
                        <TextField fx:id="txtGiaPhong" editable="false" promptText="Nhập giá tiền" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Trạng thái:" />
                        <ComboBox fx:id="cbTrangThai" prefWidth="280.0" promptText="-- Chọn trạng thái --" />
                    </children>
                </VBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnThem" mnemonicParsing="false" prefWidth="60.0" style="-fx-background-color: #27ae60;" text="Thêm" textFill="WHITE" />
                        <Button fx:id="btnSua" mnemonicParsing="false" prefWidth="60.0" style="-fx-background-color: #f39c12;" text="Sửa" textFill="WHITE" />
                        <Button fx:id="btnXoa" mnemonicParsing="false" prefWidth="60.0" style="-fx-background-color: #c0392b;" text="Xóa" textFill="WHITE" />
                        <Button fx:id="btnLamMoi" mnemonicParsing="false" prefWidth="70.0" text="Đặt lại" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
            </padding>
        </VBox>
    </left>

    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <TextField fx:id="txtTimKiem" prefHeight="30.0" prefWidth="300.0" promptText="Tìm kiếm theo tên hoặc mã phòng..." />
                        <ComboBox fx:id="cbLocLoaiPhong" prefWidth="150.0" promptText="-- Lọc Loại Phòng --" />
                        <ComboBox fx:id="cbLocTrangThai" prefWidth="150.0" promptText="-- Lọc Trạng Thái --" />
                    </children>
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </HBox>

                <TableView fx:id="tvPhong" prefHeight="480.0" prefWidth="570.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colSTT" prefWidth="30.0" text="STT" />
                        <TableColumn fx:id="colMaPhong" prefWidth="80.0" text="Mã Phòng" />
                        <TableColumn fx:id="colTenPhong" prefWidth="80.0" text="Tên Phòng" />
                        <TableColumn fx:id="colLoaiPhong" prefWidth="100.0" text="Loại Phòng" />
                        <TableColumn fx:id="colSoNguoi" prefWidth="100.0" text="Số người tối đa" />
                        <TableColumn fx:id="colGiaPhong" prefWidth="120.0" text="Giá (VNĐ)" />
                        <TableColumn fx:id="colTrangThai" prefWidth="100.0" text="Trạng Thái" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
