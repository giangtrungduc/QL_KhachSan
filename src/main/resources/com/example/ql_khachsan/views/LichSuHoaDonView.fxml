<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../css/LichSuHoaDonStyles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ql_khachsan.controllers.LichSuHoaDonController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="15" right="15" top="15" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="filter-box">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <children>
                        <TextField fx:id="txtMaKH" prefWidth="200" promptText="Tìm theo tên khách hàng..." />
                        <Label text="Từ ngày:" />
                        <DatePicker fx:id="dpFrom" prefWidth="120" />
                        <Label text="Đến:" />
                        <DatePicker fx:id="dpTo" prefWidth="120" />
                        <Button onAction="#handleFilter" styleClass="btn-filter" text="Lọc dữ liệu" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tblHoaDon">
            <columns>
                <TableColumn fx:id="colSTT" prefWidth="50" text="STT" />
                <TableColumn fx:id="colMaHD" prefWidth="100" text="Mã HĐ" />
                <TableColumn fx:id="colHoTen" prefWidth="180" text="Khách Hàng" />
                <TableColumn fx:id="colMaKH" prefWidth="100" text="Mã KH" />
<!--                <TableColumn fx:id="colMaDP" prefWidth="100" text="Mã Phiếu" />-->
                <TableColumn fx:id="colNgayLap" prefWidth="150" text="Ngày Lập" />
                <TableColumn fx:id="colTongTien" prefWidth="150" text="Tổng Tiền" />
                <TableColumn fx:id="colGhiChu" prefWidth="150" text="Ghi Chú" />
                <TableColumn fx:id="colChiTiet" prefWidth="100" text="Thao Tác" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="15" left="15" right="15" />
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>